---
Version: '2012-10-17'
Statement:
  - Sid: ListBucket
    Effect: Allow
    Action:
      - s3:GetBucketLocation
      - s3:ListBucket
      - s3:ListBuckets
    Resource: '${bucket_arn}'

  - Sid: DownloadObjects
    Effect: Allow
    Action:
      - s3:*Object
    Resource: '${bucket_arn}/*'

  - Sid: KMS
    Effect: Allow
    Action:
      - kms:Decrypt
      - kms:GenerateDataKey
    Resource: '${kms_arn}'
